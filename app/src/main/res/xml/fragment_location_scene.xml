<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/buttonLocation"
            motion:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="@+id/guideline4"
            motion:transitionEasing="cubic(0.2,0.2,0.31,1)"
            android:scaleX="100"
            android:scaleY="100">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/primary" />
        </Constraint>
        <Constraint
            android:id="@+id/buttonLocation"
            motion:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="@+id/guideline4" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/buttonLocation"
            motion:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_width="1dp"
            android:layout_height="1dp"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="@+id/guideline4"
            android:scaleX="0"
            android:scaleY="0"></Constraint>
        <Constraint
            android:id="@+id/buttonLocation"
            motion:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="@+id/guideline4" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:motionInterpolator="cubic(0,1,0,1)" />
</MotionScene>