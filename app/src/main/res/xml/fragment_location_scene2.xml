<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="cubic(0.23,0,0,1)">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/buttonLocation" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/buttonLocation"
            motion:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="@+id/guideline4"
            android:visibility="visible" >
            <CustomAttribute
                motion:attributeName="text" />
        </Constraint>
        <Constraint
            android:id="@+id/buttonLocation"
            motion:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="@+id/guideline4" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/buttonLocation"
            motion:layout_constraintEnd_toStartOf="@+id/guideline5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="@+id/guideline6"
            motion:layout_constraintStart_toStartOf="@+id/guideline4"
            android:visibility="invisible" >
            <CustomAttribute
                motion:attributeName="text" />
        </Constraint>
    </ConstraintSet>
</MotionScene>